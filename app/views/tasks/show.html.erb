<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
    <% if @task.completed %>
      <input type="checkbox" id="task" checked>
      <label for="task"> <%= "This task is completed"%></label><br>
    <% else %>
      <input type="checkbox" id="task">
      <label for="task"> <%= "This task is not completed yet"%></label><br>
    <% end %>

<%= link_to 'Back to list', tasks_path %>

<%= link_to 'Edit this task', "/tasks/#{@task.id}/edit" %>

